#include <iostream>
using namespace std;


void printarray(int arr[], int size)
{
    
  for(int i=0; i<size; i++)
  {
      cout<<arr[i];
  }
 
}



int main() {
  
  //declare
  
  int number[15];
  
  cout<<"everything is fine "<<endl;
  
  //accessing an array
  
  cout<<"value at 0 index" << number[4] <<endl;
  
  
  // initializing an array
  
  int second[3] = {5,7,11};
  
  //accessing an element
  
  cout<<"value at 2 index" << second[2] <<endl;
  
  
  int third[21] ={2,7};
  
  //print the array
  
  int n=21;
  
  for(int i=0; i<n; i++)
  {
      cout<<third[i];
  }
  
  cout<<endl;
  char ch[5] = {'a', 'b' , 'c', 'r', 'p'};
  

  
  for(int i=0; i<5; i++)
  {
      cout<<ch[i];
  }
  cout<<endl;


printarray(third, 15);
 
    return 0;
}
